# Application
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://financeflow:financeflow_password@localhost:5432/financeflow_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets
JWT_SECRET=super-secret-jwt-key-change-in-production-12345678
JWT_REFRESH_SECRET=super-secret-refresh-jwt-key-change-in-production-12345678
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL
CLIENT_URL=http://localhost:3000

# Plaid API (Optional for MVP)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# OAuth Providers (Optional for MVP)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Security
ENCRYPTION_KEY=your-32-character-encryption-key12
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=debug
