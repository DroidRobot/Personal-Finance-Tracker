# Application
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://financeflow:financeflow_password@localhost:5432/financeflow_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (Generate secure random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL
CLIENT_URL=http://localhost:3000

# Plaid API (https://plaid.com)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
PLAID_PRODUCTS=transactions,accounts,investments
PLAID_COUNTRY_CODES=US,CA

# OAuth Providers
# Google OAuth (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=financeflow-uploads

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=FinanceFlow <noreply@financeflow.com>

# Stripe (for premium features)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# OpenAI API (for intelligent categorization)
OPENAI_API_KEY=your_openai_api_key

# Alpha Vantage (for stock data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Feature Flags
ENABLE_PLAID=true
ENABLE_OCR=true
ENABLE_AI_CATEGORIZATION=true
ENABLE_INVESTMENT_TRACKING=true
ENABLE_MULTI_CURRENCY=true

# Development
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
